---
import Section from "./Section.astro";

const svgProps = 'width="24" height="24" viewBox="0 0 24 24"';

const skillsData = [
  { 
    name: "Angular", 
  },
  { 
    name: "React",
  },
  { 
    name: "Spring Boot",
  },
  { 
    name: "GitHub",
  },
  { 
    name: "Figma",
  },
  { 
    name: "SQL",
  }
];
---

<Section id="skills">
  <div class="max-w-5xl mx-auto">
    <h2 class="mb-8 text-3xl font-bold">Skills</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skillsData.map((skill) => (
        <div class="flex flex-col items-center justify-center p-6 border rounded-lg dark:border-white/10 border-black/10 hover:border-black/30 dark:hover:border-white/30 transition-all duration-300 h-24 group">
          <h3 class="text-xl font-bold">{skill.name}</h3>
        </div>
      ))}
    </div>
  </div>
</Section> 