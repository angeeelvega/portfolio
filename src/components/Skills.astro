---
import Section from "./Section.astro";

const skillsData = [
  { 
    name: "Angular", 
  },
  { 
    name: "React",
  },
  { 
    name: "Spring Boot",
  },
  { 
    name: "GitHub",
  },
  { 
    name: "Figma",
  },
  { 
    name: "SQL",
  }
];
---

<Section id="skills">
  <div class="max-w-5xl mx-auto">
    <h2 class="mb-8 text-3xl font-bold">Skills</h2>
    <ul class="list-disc pl-5 space-y-2">
      {skillsData.map((skill) => (
        <div class="flex flex-col items-center justify-center p-6 border rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-xl font-bold">{skill.name}</h3>
        </div>
      ))}
    </div>
  </div>
</Section> 